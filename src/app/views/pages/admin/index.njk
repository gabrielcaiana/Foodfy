{% extends 'layout.njk' %}

{% block header %}
  <header class="headerAdmin">
    <div class="headerAdmin__content">
      <a class="headerAdmin__content__logo" href="/admin/recipes"><img src="/assets/image/foodfy-white.png" alt="Foodfy"></a>
      <nav class="headerAdmin__content__nav">
        <ul class="headerAdmin__content__nav__list">
          <li class="headerAdmin__content__nav__list__item">
            <a class="active" href="#">receitas</a>
          </li>
          <li class="headerAdmin__content__nav__list__item">
            <a href="#">chefs</a>
          </li>
        </ul>
      </nav>
    </div>
  </header>
{% endblock %}

{% block content %}
  <section class="receitas">
    <h2 class="receitas__adminTitle">Gerenciar receitas</h2>
    <div class="receitas__gridAdmin">
      {% for recipe in recipes %}
        <div class="receita transform" href="/{{recipe.id}}">
          <div class="receita__content">
            <img class="receita__content__thumb" src="{{recipe.image}}" alt="{{recipe.title}}">
            <p class="receita__content__name">{{recipe.title}}</p>
            <span class="receita__content__author">{{recipe.author}}</span>
          </div>
          <a class="receitas__link" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
        {% endfor%}
      </div>
    </section>
  {% endblock %}