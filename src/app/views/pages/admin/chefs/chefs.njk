{% extends 'layoutAdmin.njk' %}

{%block content%}
 <section class="chefs">
  <h1 class="chefs__title">Gerenciar chefs</h1>
  <div class="chefs__grid">
   {% for chef in chefs %}
    <div class="chef">
     <div class="chef__card">
      <img class="chef__card__image" src="{{chef.avatar_url}}" alt="{{chef.name}}">
      <div class="chef__card__content">
       <p class="chef__card__content__name">{{chef.name}}</p>
       <a class="chef__card__content__link" href="/admin/chefs/{{chef.id}}">Visualizar</a>
      </div>

     </div>
    </div>
    {% endfor%}
   </div>
  </section>
  {%endblock%}