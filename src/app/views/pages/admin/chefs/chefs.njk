{% extends 'layoutAdmin.njk' %}

{%block content%}
 <section class="chefs">
  <div class="headerCreate">
   <div class="headerTitle">
    <h1>Gerenciar chefs</h1>
   </div>
   <div class="headerActions">
    <a href="/admin/chefs/create">
     <button class="btn-salvar">Novo chef</button>
    </a>
   </div>
  </div>

  <div class="chefs__grid">
   {% for chef in chefs %}
    <div class="chef">
     <div class="chef__card">
      <img class="chef__card__image" src="{{chef.avatar_url}}" alt="{{chef.name}}">
      <div class="chef__card__content">
       <p class="chef__card__content__name">{{chef.name}}</p>
       <a class="chef__card__content__link" href="/admin/chefs/{{chef.id}}">Visualizar</a>
      </div>

     </div>
    </div>
    {% endfor%}
   </div>
  </section>
  {%endblock%}