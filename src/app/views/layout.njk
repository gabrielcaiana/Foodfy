    {% block head %}
      <title>Foodfy | Home</title>
    {% endblock %}

  </head>

  <body>
    <div class="container">
      {% block header %}
        <header class="header">
          <div class="header__content">
            <a class="header__content__logo" href="/"><img src="/assets/image/logo.png" alt="Foodfy"></a>
            <ul class="header__content__list">
              <li class="header__content__list__item">
                <a class="header__content__list__item__link" href="/about">
                  Sobre</a>
              </li>

              <li class="header__content__list__item">
                <a class="header__content__list__item__link" href="/recipes">Receitas</a>
              </li>

              <li class="header__content__list__item">
                <a class="header__content__list__item__link" href="/chefs">Chefs</a>
              </li>
            </ul>
            <form class="header__content__search" aciton="/recipes" method="GET">
              <input class="header__content__search__input" type="text" name="filter" placeholder="Procure por uma receita" value="{{ filter }}">
              <button class="header__content__search__button" type="submit">Buscar</button>
            </form>
          </header>
        {% endblock %}
        {% block content %}{% endblock %}

      </div>
      <footer class="footer">
        <span class="footer__text">Todos direitos reservados, receitas Foodfy.</span>
      </footer>

      <script src="/app.js"></script>
    </body>
  </html>