{% extends 'layout.njk' %}

{% block header %}
    <header class="headerAdmin">
      <div class="headerAdmin__content">
        <a class="headerAdmin__content__logo" href="/"><img src="/assets/image/foodfy-white.png" alt="Foodfy"></a>
        <nav class="headerAdmin__content__nav">
          <ul class="headerAdmin__content__nav__list">
            <li class="headerAdmin__content__nav__list__item"><a class="active" href="#">receitas</a></li>
            <li class="headerAdmin__content__nav__list__item"><a href="#">chefs</a></li>
          </ul>
        </nav>
      </div>
    </header>
{% endblock %}

{% block content %}
    <section class="receitas">
        <h2>Gerenciar receitas</h2>
        <div class="receitas-page-admin">
            {% for recipe in recipes %}
                <div class="receita-item-admin">
                    <div>
                        <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                    </div>
                    <div>
                        <p>{{recipe.name}}</p>
                        <span>{{recipe.author}}</span>
                        <a class="linkRecipe" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
                {% endfor%}
            </div>
        </section>
    {% endblock %}