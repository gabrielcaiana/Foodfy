{% extends 'layout.njk' %}

{% block content %}

    <section class="receitas-page">
        {% for recipe in recipes %}
        <a class="linkRecipe" href="/{{recipe.id}}">
            <div class="receita-item">
                <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                <p class="title-modal">{{recipe.name}}</p>
                <span class="autor-modal">{{recipe.author}}</span>
            </div>
            </a>
        {% endfor %}

    </section>

{% endblock %}